<div id="article-wrapper">
	<h2>New Message</h2>
	 <%= form_for(@message) do |f| %>
	  <% if @message.errors.any? %>
	  <div id="errorExplanation">
	    <span><%= pluralize(@message.errors.count, "error") %> prohibited this post from being saved:</span>
	    <ul>
	    <% @message.errors.full_messages.each do |msg| %>
	      <li><%= msg %></li>
	    <% end %>
	    </ul>
	  </div>
	  <% end %>
 
	  <div class="field">
	    <%= f.label :message %><br />
	    <%= f.text_area :message %>
	  </div>
